extends ../layout

block content
    div(class='hero-unit')
        h1='Анализ ассортимента'
        p='Последняя синхронизация с сервисом поставщика '
            span(id='time-sync-label')=syncDate
        div(class='pull-right toolbox toolbox_tab_products')
            div(class='action-set action-set_state_published')
                button(class='btn btn-primary btn-danger action-btn', data-action='unpublish')='Снять с публикации'
            div(class='action-set action-set_state_unpublished')
                button(class='btn btn-primary btn-success action-btn', data-action='publish')='Опубликовать'
                button(class='btn btn-primary btn-danger action-btn', data-action='ignore')='В черный список'
            div(class='action-set action-set_state_new')
                button(class='btn btn-primary btn-success action-btn', data-action='add-from-contractor')='В ассортимент'
                button(class='btn btn-primary btn-danger action-btn', data-action='ignore')='В черный список'
            div(class='action-set action-set_state_available')
                button(class='btn btn-primary btn-info action-btn', data-action='actualize')='Актуализировать'
            div(class='action-set action-set_state_missing')
                button(class='btn btn-primary btn-info action-btn', data-action='actualize')='Актуализировать'
                button(class='btn btn-primary btn-danger action-btn', data-action='ignore')='В черный список'
            div(class='action-set action-set_state_ignored')
                button(class='btn btn-primary btn-success action-btn', data-action='unignore')='В ассортимент'
                button(class='btn btn-primary btn-danger action-btn', data-action='remove')='Удалить'
        p
            button(class='btn btn-primary', id='sync-btn')='Синхронизация'
            button(class='btn btn-primary', data-toggle='modal', data-target='#add-product-modal')='Добавить товар'
            button(id='add-category', class='btn btn-primary')='Добавить категорию'


    include add-product-dlg
    include categories/save-modal
    include wait-modal

    div(class='tabbable')
        ul(class='nav nav-tabs')
            li(class='dropdown active nav-tab nav-tab_type_products')
                a(class='dropdown-toggle', role='button', data-toggle='dropdown')
                    span(class='text current-products-tab')='Новые товары'
                    b(class='caret')
                ul(class='dropdown-menu', role='menu')
                    li
                        a(class='dropdown-item products-tab', products='published')='Опубликованные товары'
                    li
                        a(class='dropdown-item products-tab', products='unpublished')='Неопубликованные товары'
                    li
                        a(class='dropdown-item products-tab', products='new')='Новые товары'
                    li
                        a(class='dropdown-item products-tab', products='missing')='Нет в наличии у поставщика'
                    li
                        a(class='dropdown-item products-tab', products='available')='Доступные у поставщика'
                    li
                        a(class='dropdown-item products-tab', products='ignored')='Черный список'
            li(class='nav-tab nav-tab_type_categories')
                a(href='#categories')='Категории'
            li(class='nav-tab nav-tab_type_analysis')
                a(href='#analysis')='Анализ ассортимента'

        div(class='tab-content')
            div(class='tab-pane active tab-pane_type_products')
                button(class='btn select-all')='Выбрать все'
                button(class='btn deselect-all')='Сбросить'
                table(class='data-table table table-striped table-bordered')
                    thead
                        tr
                            th(width='5%')='Артикул'
                            th(width='27%')='Название'
                            th(width='14%')='Цена (опт/рек/рзн)'
                            th(width='50%')='Описание'
                            th(width='2%')='Наличие'
                            th(width='2%')='Чекбокс'
                    tbody
                    tfoot
                        tr
                            th='Артикул'
                            th='Название'
                            th='Цена'
                            th='Описание'
                            th='Наличие'
                            th='Чекбокс'

            div(class='tab-pane tab-pane_type_categories')
                include categories/categories

            div(class='tab-pane tab-pane_type_analysis')
                h1(class='nav-header')='Анализ ассортимента'
